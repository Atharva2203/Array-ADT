#include <iostream>
using namespace std;

int Min(int arr[],int n)
{
    int min=arr[0];
    for(int i=0;i<n;i++)
    {
        if(arr[i]<min)
            min=arr[i];
    }
    return min;
}

int main()
{
    int arr[]={20,3,14,28,4};
    int n=sizeof(arr)/sizeof(int);
    cout<<Min(arr,n);
    return 0;
}
